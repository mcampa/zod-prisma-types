{
  "name": "zod-prisma-schemas",
  "version": "1.0.2",
  "description": "Generates zod schemas from Prisma models with advanced validation (Fork of zod-prisma-types)",
  "author": "Mario Campa",
  "license": "MIT",
  "main": "dist/generator.js",
  "types": "dist/generator.d.ts",
  "private": false,
  "keywords": [
    "zod",
    "prisma",
    "typescript",
    "schema",
    "types",
    "generator",
    "validation"
  ],
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mcampa/zod-prisma-types.git"
  },
  "bin": {
    "zod-prisma-types": "dist/bin.js"
  },
  "scripts": {
    "lint": "eslint --ext ts,tsx,js,jsx --fix .",
    "test": "vitest",
    "build": "tsc",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\""
  },
  "devDependencies": {
    "@prisma/internals": "7.0.1",
    "@types/lodash": "^4.17.20",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-config-universe": "^14.3.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@prisma/dmmf": "7.0.1",
    "@prisma/generator-helper": "7.0.1",
    "code-block-writer": "^13.0.3",
    "lodash": "^4.17.21",
    "zod": "^4.1.11"
  },
  "peerDependencies": {
    "@prisma/client": "^7.x.x",
    "prisma": "^7.x.x",
    "zod": "^4.0.0"
  }
}
